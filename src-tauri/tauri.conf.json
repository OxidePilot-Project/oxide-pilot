{
  "$schema": "https://schema.tauri.app/v1",
  "package": {
    "productName": "Oxide Pilot",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "npm --prefix ./src-frontend run dev -- --port 5317",
    "beforeBuildCommand": "echo 'Frontend ya compilado'",
    "devPath": "http://localhost:5317",
    "distDir": "../src-frontend/dist"
  },
  "tauri": {
    "windows": [
      {
        "title": "Oxide Pilot",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "maximized": false
      }
    ],
    "bundle": {
      "active": true,
      "identifier": "com.oxide.pilot",
      "publisher": "Oxide Systems",
      "copyright": "Â© 2025 Oxide Systems",
      "icon": [
        "icons/icon.ico"
      ],
      "targets": [
        "nsis",
        "msi"
      ],
      "windows": {
        "nsis": {
          "displayLanguageSelector": false
        }
      },
      "macOS": {
        "frameworks": [],
        "minimumSystemVersion": "10.15",
        "exceptionDomain": "",
        "signingIdentity": null,
        "providerShortName": null,
        "entitlements": null
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.0-37", "libgtk-3-0"]
      }
    },
    "security": {
      "csp": null
    },
    "allowlist": {
      "all": false,
      "app": { "all": true },
      "window": { "all": true },
      "dialog": { "all": false, "open": true, "save": true, "ask": true, "confirm": true },
      "fs": {
        "all": false,
        "writeFile": true,
        "readDir": true,
        "createDir": true,
        "renameFile": true,
        "readFile": true,
        "copyFile": true,
        "exists": true,
        "removeDir": true,
        "removeFile": true
      },
      "http": { "all": true },
      "path": { "all": true },
      "notification": { "all": true },
      "shell": { "all": false, "open": true }
    }
  }
}
